#cloud-config
autoinstall:
  version: 1
  early-commands:
  # Stop SSH to prevent Packer from connecting too early
  - systemctl stop ssh
  hostname: pkr-ubuntu-2204
  timezone: Africa/Johannesburg
  locale: en_ZA
  keyboard:
    layout: us
  storage:
    layout:
      name: lvm
  network:
    version: 2
    ethernets:
      alleths:
        match:
          name: e*
        dhcp4: true
  ssh:
    install-server: yes
    allow-pw: true
  package_update: true
  package_upgrade: true
  packages:
    - open-vm-tools
    - python3
  late-commands:
    - curtin in-target --target=/target -- apt-get update
    - curtin in-target --target=/target -- apt-get upgrade --yes
    - curtin in-target --target=/target -- sudo cloud-init clean
  user-data:
    users:
    - name: #{ssh_username}#
      plain_text_passwd: #{ssh_password}#
      lock_passwd: false
      groups: users, admin, sudo
      sudo: ALL=(ALL) NOPASSWD:ALL
    - name: ansible-admin
      gecos: Ansible Admin User
      groups: users, admin, wheel
      sudo: ALL=(ALL) NOPASSWD:ALL
      shell: /bin/bash
      lock_passwd: true
      ssh_authorized_keys:
        - #{ansible_ssh_key}#

  
  


