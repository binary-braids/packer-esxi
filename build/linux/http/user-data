#cloud-config
autoinstall:
  version: 1
  locale: en_ZA
  keyboard:
    layout: us
  storage:
    layout:
      name: lvm
  ssh:
    install-server: yes
    allow-pw: true
  user-data:
    package_upgrade: true
    timezone: Africa/Johannesburg
    users:
    - name: #{ssh_username}#
      passwd: #{ssh_password}#
      groups: users, admin, wheel
      sudo: ALL=(ALL) NOPASSWD:ALL
    - name: ansible
      gecos: Ansible User
      groups: users, admin, wheel
      sudo: ALL=(ALL) NOPASSWD:ALL
      shell: /bin/bash
      lock_passwd: true
      ssh_authorized_keys:
        - "#{ansible_ssh_key}#"

