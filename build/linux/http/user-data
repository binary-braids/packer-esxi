#cloud-config
autoinstall:
  version: 1
  locale: en_ZA
  keyboard:
    layout: us
  ssh:
    install-server: true
    allow-pw: true
  apt:
  primary:
    - arches: [default]
      uri: http://za.archive.ubuntu.com/ubuntu/
  package_update: true
  package_upgrade: true
  storage:
    layout:
      name: lvm
  preserve_hostname: false
  hostname: packerubuntu
  timezone: Africa/Johannesburg
  users:
    - name: #{ssh_username}#
      passwd: #{ssh_password}#
      groups: users, admin, wheel
      lock-passwd: false
      sudo: ALL=(ALL) NOPASSWD:ALL
      shell: /bin/bash
    - name: ansible
      gecos: Ansible User
      groups: users, admin, wheel
      sudo: ALL=(ALL) NOPASSWD:ALL
      shell: /bin/bash
      lock_passwd: true
      ssh_authorized_keys:
        - "#{ansible_ssh_key}#"

